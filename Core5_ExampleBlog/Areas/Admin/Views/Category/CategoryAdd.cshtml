@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CategoryAdd</h1>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-content">
                    <form method="post" asp-action="CategoryAdd" asp-controller="Category" enctype="multipart/form-data">
                        <div asp-validation-summary=ModelOnly></div>
                        <div class="form-group  row">
                            <label class="col-sm-1 col-form-label">Kategori Adı</label>
                            <div class="col-sm-11"><input type="text" class="form-control" asp-for="CategoryName" placeholder="Kategori Adı"></div>
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                        <div class="form-group  row">
                            <label class="col-sm-1 col-form-label">Kategori Açıklama</label>
                            <div class="col-sm-11">
                                <textarea class="form-control"  asp-for="CategoryDescription" id="summernote" rows="4"></textarea>
                            </div>
                            <span asp-validation-for="CategoryDescription" class="text-danger"></span>
                        </div>
                        <div class="hr-line-dashed"></div>



                        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
                        <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
                        <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
                        <script>
                            $('#summernote').summernote({
                                placeholder: 'Blog İçeriginiz!!!',
                                tabsize: 2,
                                height: 100,
                                toolbar: [
                                    ['style', ['style']],
                                    ['font', ['bold', 'underline', 'clear']],
                                    ['color', ['color']],
                                    ['para', ['ul', 'ol', 'paragraph']],
                                    ['table', ['table']],
                                    ['insert', ['link', 'picture', 'video']],
                                    ['view', ['fullscreen', 'codeview', 'help']]
                                ]
                            });
                        </script>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

