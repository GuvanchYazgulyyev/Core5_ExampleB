@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>



<body>
    <div id="wrapper">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-title">
                            <h5>Kategoriler</h5>

                        </div>
                        <div class="ibox-content">

                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>Kategori Adı</th>
                                            <th>Kategori açıklaması</th>
                                            <th>Pasif Yap</th>
                                            <th>Aktif Yap</th>
                                            <th>Detay</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var x in Model)
                                        {
                                            <tr class="gradeX">
                                                <td>@x.CategoryName</td>
                                                <td>
                                                    @Html.Raw(x.CategoryDescription)
                                                </td>
                                                @*  <td>@x.CategoryStatus</td>*@
                                                <td><a class="btn btn-danger btn-rounded" style="color:#fff">Pasif Yap</a> </td>
                                                <td><a class="btn btn-success btn-rounded" style="color:#fff">Aktif Yap</a> </td>
                                                <td><a class="btn btn-warning btn-rounded" style="color:#fff">Güncelle</a> </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>

                                @Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))

                                <a asp-controller="Category" asp-action="CategoryAdd" class="btn btn-success btn-rounded" style="color:#fff">Kategori Ekle</a>
                                <br />

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

</body>

</html>
