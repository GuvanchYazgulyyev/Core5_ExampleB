@model IEnumerable<EntityLayer.Concrete.Blog>



<div class="tech-btm">
    <h4>Yazarın Diger Yazıları</h4>
    @foreach (var x in Model)
    {
        <div class="blog-grids row mb-3">
            <div class="col-md-5 blog-grid-left">
                <a asp-controller="Blog" asp-action="BlogDetails" asp-route-id="@x.BlogID">
                    <img src="~/web/images/1.jpg" class="img-fluid" alt="">
                </a>
            </div>
            <div class="col-md-7 blog-grid-right">

                <h5>
                    <a asp-controller="Blog" asp-action="BlogDetails" asp-route-id="@x.BlogID"> @x.BlogTitle </a>
                </h5>
                <div class="sub-meta">
                    <span>
                        <i class="far fa-clock"></i> @(((DateTime)x.BlogCreateDate).ToString("dd-MMM-yyyy"))
                    </span>
                </div>
            </div>

        </div>
    }

</div>
