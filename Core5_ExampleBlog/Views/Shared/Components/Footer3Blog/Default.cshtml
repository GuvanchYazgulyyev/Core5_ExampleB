@model IEnumerable<EntityLayer.Concrete.Blog>


@foreach (var item in Model)
{
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a asp-action="BlogDetails" asp-controller="Blog" asp-route-id="@item.BlogID">
                <img src="@item.BlogImage" class="card-img-top img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a asp-action="BlogDetails" asp-controller="Blog" asp-route-id="@item.BlogID">@item.BlogTitle </a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))

                </span>
            </div>
        </div>

    </div>
}

