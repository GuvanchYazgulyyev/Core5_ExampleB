 @using EntityLayer.Concrete
 @model List<AllMessage>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Mesajlar</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> Konu </th>
                        <th> Gönderen </th>
                        <th> Tarih</th>
                        <th> Sil </th>
                        <th> Mesajı Gör </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td> @x.MessageId </td>
                            <td> @x.Subject </td>
                            <td> @x.SenderUser.WriterName </td>
                            <td> @(((DateTime)x.MessageDate).ToString("dd MMM ddd yyy HH:mm"))</td>
                            @if (x.MessageStatus == false)
                            {
                                <td>
                                    <label class="badge badge-danger">
                                        Pasif
                                    </label>
                                </td>
                            }
                            else
                            {
                                <td>
                                    <label class="badge badge-success">
                                        Aktif
                                    </label>

                                </td>
                            }
                            <td><a asp-action="DeleteBlog" asp-controller="Message" asp-route-id="@x.MessageId" class="btn btn-gradient-danger btn-rounded">Sil</a> </td>
                            <td><a asp-action="MessageDetail" asp-controller="Message" asp-route-id="@x.MessageId" class="btn btn-gradient-info btn-rounded">Detay</a> </td>

                        </tr>
                    }
                </tbody>
            </table>
            <br />
        </div>
    </div>
</div>

