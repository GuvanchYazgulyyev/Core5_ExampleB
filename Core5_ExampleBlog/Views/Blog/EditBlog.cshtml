@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "EditBlog";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Blog Güncelle</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yebi Blog Ekleyin</h4>
            <p class="card-description"> Yeni Blog </p>
            <form class="forms-sample" method="post" asp-action="EditBlog" enctype="multipart/form-data">

                <div class="form-group">
                    <label for="exampleInputName1">Blog Başlığı!</label>
                    <input type="text" class="form-control" asp-for="BlogTitle" placeholder="Name">

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Blog Görseli</label>
                    <input type="file" class="form-control" name="userPicture" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" placeholder="Blog Görseli">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Blog Küçük Görseli</label>
                    <input type="file" class="form-control" name="userPicture2" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" placeholder="Blog Görseli">
                </div>

                <div class="form-group">
                    <label for="exampleSelectGender">Kategori</label>
                    <select class="form-control" asp-for="CategoryID" asp-items="@ViewBag.category"></select>
                </div>


                <div class="form-group">
                    <label for="exampleTextarea1">İçerik</label>
                    <textarea class="form-control" asp-for="BlogContent" id="summernote" rows="4"></textarea>
                </div>



                <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
                <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
                <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>


                <script>
                    $('#summernote').summernote({
                        placeholder: 'Blog İçeriginiz!!!',
                        tabsize: 2,
                        height: 440,
                        toolbar: [
                            ['style', ['style']],
                            ['font', ['bold', 'underline', 'clear']],
                            ['color', ['color']],
                            ['para', ['ul', 'ol', 'paragraph']],
                            ['table', ['table']],
                            ['insert', ['link', 'picture', 'video']],
                            ['view', ['fullscreen', 'codeview', 'help']]
                        ]
                    });
                </script>





                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal Et</button>
            </form>
        </div>
    </div>
</div>
